
<% if @user.errors.any? %>
  <%= pluralize(@user.errors.count, "error")%>エラーです。
    <% @user.errors.full_messages.each do |message|%>
      <%= message %>
    <%end%>
<% end %>

<!--編集画面-->

<%= form_for @user do |f| %>

<%=f.label :username%>
<%=f.text_field :username%>

<%=f.label :email%>
<%=f.text_field :email%>

<%=f.label :profile%>
<%=f.text_field :profile%>

<%=f.label :profile_image%>
<%=f.attachment_field :profile_image%>

<%=f.submit "更新"%>

<% end %>