= render 'layouts/notifications'
.tweet
  .tweet__title
    - if @tweet.user.id == current_user.id
      = button_to  '編集', edit_tweet_path(@tweet), method: :get
    = @tweet.title
  .tweet__image
    = attachment_image_tag @tweet, :image
    = simple_format @tweet.body
    / simple_formatで入力した内容も改行させる
    = link_to user_path(@tweet.user) do
      = @tweet.user.username
      さんのページへ
  .tweet__comment 
    - if current_user
      = form_tag("/tweets/#{@tweet.id}/comments", method: :post) do
        %textarea{:cols => "30", :name => "text", :placeholder => "コメントする"}
        %input{:type => "submit", :value => "コメント"}/
    .comments
      %h4 ＜コメント一覧＞
      - if @comments
        - @comments.each do |comment|
          %p
            %storng
              = link_to comment.user.username, "/users/#{comment.user_id}"
              ：
              \#{comment.text}    