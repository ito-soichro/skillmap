
<% if @tweet.errors.any? %>
  <%= pluralize(@tweet.errors.count, "error")%>エラーです。
    <% @tweet.errors.full_messages.each do |message|%>
      <%= message %>
    <%end%>
<% end %>

<%= form_for @tweet do |f| %>

  <%= f.label :title%>
  <%= f.text_field :title%>

  <%= f.label :body%>
  <%= f.text_area :body%>

  <%= f.label :image%>
  <%= f.attachment_field :image%>

  <%= f.submit "投稿"%>


<% end %>