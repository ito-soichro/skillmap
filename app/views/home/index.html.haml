= render 'layouts/notifications'

.main
  .reserch
    = form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form|
      = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
      = form.submit "検索", class: "search-btn"
  .about
    - if user_signed_in?
      = link_to "新規投稿", new_tweet_path, class:"user-lists"
      = link_to "投稿一覧", tweets_path, class:"tweet-lists"
      = link_to "投稿者一覧", users_path, class:"user-lists"

    - else
      = link_to "投稿一覧", tweets_path, class:"tweet-lists"
      = link_to "投稿者一覧", users_path, class:"user-lists"
  
.center
  .bg-video-wrap
    %video{:autoplay => "", :loop => "", :muted => "", :src => "https://designsupply-web.com/samplecontent/vender/codepen/20181014.mp4"}
    .overlay
.main2
  .main2__title
    Pick Up Tweets
  .main2__tweets
    - @tweets.each do |tweet|
      .main2__tweets__lists
        .main2__tweets__lists_list
          = tweet.title
          .main2__tweets__lists_list__tweet_image
            = link_to tweet_path(tweet) do
              = attachment_image_tag tweet, :image
            

  .main2__user-name
    Pick Up UsersUsers
  .main2__users
    - @users.each do |user|
      .main2__users__lists
        .main2__users__lists__list
          %label.main2__users__lists__list__image
            = link_to user_path(user) do
              = attachment_image_tag user, :profile_image, fallback: "no-image.png"
              .main2__users__lists__list__name    
                = user.username



.fooder